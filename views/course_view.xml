<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='view_course_tree' model='ir.ui.view'>
        <field name='name'>khanacademy.course.tree</field>
        <field name='model'>khanacademy.course</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='course_name'/>
                <field name='course_code'/>
                <field name='credit_hour'/>
                <field name='course_description'/>
            </tree>
        </field>
    </record>

    <record id='view_course_form' model='ir.ui.view'>
        <field name='name'>khanacademy.course.form</field>
        <field name='model'>khanacademy.course</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='course_name'/>
                        <field name='course_code'/>
                        <field name='credit_hour'/>
                        <field name='course_description'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='view_course_search' model='ir.ui.view'>
        <field name='name'>khanacademy.course.search</field>
        <field name='model'>khanacademy.course</field>
        <field name='arch' type='xml'>
            <search>
                <field name='course_name'/>
                <field name='course_code'/>
                <field name='credit_hour'/>
            </search>
        </field>
    </record>

</odoo>